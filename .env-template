DATABASE_URL=sqlite:///./app.db
SECRET_KEY=your-super-secret-key-change-this-in-production

# FastAPI Server Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8001

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# LLM API Keys (optional - agent works without them in basic mode)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Delphi Epidata API Key (optional - for advanced health data analytics)
# Register at: https://api.delphi.cmu.edu/ to get your API key
# Used by the fetch_epi_signal tool for real-time COVID-19 and health surveillance data
DELPHI_EPIDATA_KEY=your-delphi-epidata-api-key-here

# Observability
LANGFUSE_SECRET_KEY=your-secret-key
LANGFUSE_PUBLIC_KEY=your-public-key
LANGFUSE_HOST=http://host.docker.internal:3001

# Checkpointing and Memory
POSTGRES_HOST=host.docker.internal
POSTGRES_SSL_MODE=disable
POSTGRES_PORT=5433
POSTGRES_DATABASE=incident_response
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-password
