{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start FastMCP Server",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": ["fastmcp_server.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "group": "servers"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Start Raw MCP Server",
